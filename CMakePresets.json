{
    "version": 3,
    "configurePresets": [
        {
            "name":      "Base",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables":
            {
                "CMAKE_EXPORT_COMPILE_COMMANDS":   "1",
                "ERHE_FONT_RASTERIZATION_LIBRARY": "freetype",
                "ERHE_GLTF_LIBRARY":               "cgltf",
                "ERHE_GUI_LIBRARY":                "imgui",
                "ERHE_PHYSICS_LIBRARY":            "bullet",
                "ERHE_PNG_LIBRARY":                "mango",
                "ERHE_PROFILE_LIBRARY":            "tracy",
                "ERHE_RAYTRACE_LIBRARY":           "none",
                "ERHE_SVG_LIBRARY":                "lunasvg",
                "ERHE_TEXT_LAYOUT_LIBRARY":        "harfbuzz",
                "ERHE_WINDOW_LIBRARY":             "glfw",
                "ERHE_XR_LIBRARY":                 "none"
            }
        },
        {
            "hidden": true,
            "name":   "Bullet",
            "cacheVariables": {
                "ERHE_PHYSICS_LIBRARY": "bullet"
            }
        },
        {
            "hidden": true,
            "name":   "Embree",
            "cacheVariables": {
                "ERHE_RAYTRACE_LIBRARY":       "Embree",
                "EMBREE_ISPC_SUPPORT":         "FALSE",
                "EMBREE_TASKING_SYSTEM":       "INTERNAL",
                "EMBREE_TUTORIALS":            "OFF",
                "EMBREE_STATIC_LIB":           "ON",
                "EMBREE_GEOMETRY_TRIANGLE":    "ON",
                "EMBREE_GEOMETRY_QUAD":        "OFF",
                "EMBREE_GEOMETRY_CURVE":       "OFF",
                "EMBREE_GEOMETRY_SUBDIVISION": "OFF",
                "EMBREE_GEOMETRY_USER":        "OFF",
                "EMBREE_GEOMETRY_INSTANCE":    "ON",
                "EMBREE_GEOMETRY_GRID":        "OFF",
                "EMBREE_GEOMETRY_POINT":       "OFF",
                "EMBREE_MAX_ISA":              "NONE",
                "EMBREE_ISA_NEON":             "OFF",
                "EMBREE_ISA_SSE2":             "OFF",
                "EMBREE_ISA_SSE42":            "OFF",
                "EMBREE_ISA_AVX":              "OFF",
                "EMBREE_ISA_AVX2":             "OFF",
                "EMBREE_ISA_AVX512":           "OFF"
            }
        },
        {
            "hidden":         true,
            "name":           "Embree SSE",
            "inherits":       ["Embree"],
            "cacheVariables": { "EMBREE_ISA_SSE42": "ON" }
        },
        {
            "hidden":         true,
            "name":           "Embree Neon",
            "inherits":       ["Embree"],
            "cacheVariables": { "EMBREE_ISA_NEON": "ON" }
        },
        {
            "name":     "Clang",
            "inherits": "Base",
            "cacheVariables": {
                "CMAKE_C_COMPILER":   "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name":     "GCC",
            "inherits": "Base",
            "cacheVariables": {
                "CMAKE_C_COMPILER":   "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name":   "Windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs":  "${hostSystemName}",
                "rhs":  "Windows"
            }
        },
        {
            "name":      "Visual Studio 2019",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 16 2019"
        },
        {
            "name":      "Visual Studio 2019 Debug",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 16 2019"
        },
        {
            "name":      "Visual Studio 2019 Release",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 16 2019"
        },
        {
            "name":      "Visual Studio 2022",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 17 2022"
        },
        {
            "name":      "Visual Studio 2022 Debug",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 17 2022"
        },
        {
            "name":      "Visual Studio 2022 Release",
            "inherits":  ["Base", "Windows"],
            "generator": "Visual Studio 17 2022"
        }
    ],

    "buildPresets": [
        {
            "name":    "Base",
            "hidden":  true,
            "verbose": false
        },
        {
            "name":            "Debug",
            "inherits":        "Base",
            "configuration":   "Debug",
            "configurePreset": "Base"
        },
        {
            "name":            "Release",
            "inherits":        "Base",
            "configuration":   "Release",
            "configurePreset": "Base"
        },

        {
            "name":            "Clang Debug",
            "inherits":        "Debug",
            "configurePreset": "Clang"
        },
        {
            "name":            "Clang Release",
            "inherits":        "Release",
            "configurePreset": "Clang"
        },

        {
            "name":            "GCC Debug",
            "inherits":        "Debug",
            "configurePreset": "GCC"
        },
        {
            "name":            "GCC Release",
            "inherits":        "Release",
            "configurePreset": "GCC"
        },

        {
            "name":            "Visual Studio 2019 Debug",
            "inherits":        "Debug",
            "configurePreset": "Visual Studio 2019"
        },
        {
            "name":            "Visual Studio 2019 Release",
            "inherits":        "Release",
            "configurePreset": "Visual Studio 2019"
        },
        {
            "name":            "Visual Studio 2019 Debug for CLion",
            "inherits":        "Debug",
            "configurePreset": "Visual Studio 2019 Debug"
        },
        {
            "name":            "Visual Studio 2019 Release for CLion",
            "inherits":        "Release",
            "configurePreset": "Visual Studio 2019 Release"
        },
        {
            "name":            "Visual Studio 2022 Debug",
            "inherits":        "Debug",
            "configurePreset": "Visual Studio 2022"
        },
        {
            "name":            "Visual Studio 2022 Release",
            "inherits":        "Release",
            "configurePreset": "Visual Studio 2022"
        },
        {
            "name":            "Visual Studio 2022 Debug for CLion",
            "inherits":        "Debug",
            "configurePreset": "Visual Studio 2022 Debug"
        },
        {
            "name":            "Visual Studio 2022 Release for CLion",
            "inherits":        "Release",
            "configurePreset": "Visual Studio 2022 Release"
        }
    ]
}
