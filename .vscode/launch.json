{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name":    "editor",
            "type":    "cppdbg",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "windows": {
                "program": "${workspaceFolder}/build/src/editor/editor.exe",
            },
            "linux": {
                "program": "${workspaceFolder}/build/src/editor/editor",
            },
        },
        {
            "name":    "editor LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "windows": {
                "program": "${workspaceFolder}/build/src/editor/editor.exe",
            },
            "linux": {
                "program": "${workspaceFolder}/build/src/editor/editor",
            },
        },
        {
            "name":    "editor VS",
            "type":    "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/src/editor/editor.exe",
            "cwd":     "${workspaceFolder}/src/editor",
        },
        {
            "name":    "Python: Current File",
            "type":    "python",
            "request": "launch",
            "program": "${file}",
            "args":    ["${workspaceFolder}/build/src/erhe/gl"],
            "console": "integratedTerminal"
        }
    ]
}
